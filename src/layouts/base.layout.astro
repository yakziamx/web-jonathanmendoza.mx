---
import { SEO, type Props as SeoProps } from "astro-seo";
import { ViewTransitions } from "astro:transitions";
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";
import "@fontsource/poppins/700.css";
import ThemeSwitcher from "@/components/theme-switcher.component.astro";
import { Site } from "@/config";
import "@/styles/global.css";

interface Props {
  meta: SeoProps;
}

const { meta } = Astro.props;

const ogImageUrl = new URL("og.png", Astro.url.origin).href;

const defaultMeta: Partial<SeoProps> = {
  titleTemplate: Site.titleTemplate,
  titleDefault: Site.title,
  description: Site.description,
  openGraph: {
    basic: {
      title: Site.title,
      type: "website",
      image: ogImageUrl,
    },
  },
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <SEO {...defaultMeta} {...meta} />

    <ViewTransitions />
  </head>
  <body
    class="flex min-h-screen flex-col font-sans text-gray-900 antialiased dark:bg-background-color dark:text-white select-none"
  >
    <div id="top"></div>
    <nav class="flex items-center p-4">
      <a href="/" class="text-2xl font-bold">{Site.title}</a>

      <div class="ml-auto">
        <ThemeSwitcher />
      </div>
    </nav>

    <slot />

    <footer class="px-4 py-16 text-gray-500 dark:text-gray-400">
      <div class="text-center">
        <p class="text-sm pt-3">
          JonathanMendoza.mx Â© 2024 <span aria-hidden="true">Â·</span>
          <a
            href="https://creativecommons.org/licenses/by-nc-nd/4.0/?ref=chooser-v1"
            target="_blank" 
            rel="noopener"
            class="font-bold hover:underline">CC BY-NC-ND 4.0
        </p>
        <p class="text-sm pt-3">
          <a
            href="#top"
            class="font-bold hover:underline">Ir para arriba ðŸ‘†</a>
        </p>
      </div>
