---
interface Props {
  date: Date;
  class?: string;
}

const { date, class: className } = Astro.props;
---

<time datetime={date.toISOString()} class:list={[className]}>
  {
    date.toLocaleDateString("es-MX", {
      year: "numeric",
      month: "long",
      day: "2-digit",
    })
  }
</time>
